<form action="users" method="get">
  <div class="filter-bar border bg-light">
    <div class="accordion accordion-flush" id="accordionFlushExample">
      <!-- Years Experience -->
      <div class="accordion-item mb-3">
        <div class="accordian-header-title">
          <h2 id="filter_title">Filter</h2>
        </div>
      </div>
      <div class="accordion-item mb-3">
        <h2 class="accordion-header" id="headingYearsExperience">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseOne" aria-expanded="false" aria-controls="flush-collapseOne">
            Years Experience
          </button>
        </h2>
        <div id="flush-collapseOne" class="accordion-collapse collapse" aria-labelledby="headingYearsExperience" data-bs-parent="#accordionFlushExample">
          <div class="accordion-body">
            <ul class="list-unstyled" data-filter-users-target="years">
              <li>
                <label>
                  <input type="checkbox" name="years_experience[]" value="M" data-action='change->filter-users#filterUsers'> 3-5 Mid Level
                </label>
              </li>
              <li>
                <label>
                  <input type="checkbox" name="years_experience[]" value="S" data-action='change->filter-users#filterUsers'> 5+ Senior
                </label>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <!-- Language -->
      <div class="accordion-item mb-3">
        <h2 class="accordion-header" id="headingLanguage">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseTwo" aria-expanded="false" aria-controls="flush-collapseTwo">
            Language
          </button>
        </h2>
        <div id="flush-collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingLanguage" data-bs-parent="#accordionFlushExample">
          <div class="accordion-body">
            <ul class="list-unstyled">
              <li>
                <label>
                  <input type="checkbox" name="language[]" value="English"> English
                </label>
              </li>
              <li>
                <label>
                  <input type="checkbox" name="language[]" value="French"> French
                </label>
              </li>
              <li>
                <label>
                  <input type="checkbox" name="language[]" value="Spanish"> Spanish
                </label>
              </li>
              <li>
                <label>
                  <input type="checkbox" name="language[]" value="Dutch"> Dutch
                </label>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <!-- Availability -->
      <div class="accordion-item mb-3">
        <h2 class="accordion-header" id="headingAvailability">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseThree" aria-expanded="false" aria-controls="flush-collapseThree">
            Availability
          </button>
        </h2>
        <div id="flush-collapseThree" class="accordion-collapse collapse" aria-labelledby="headingAvailability" data-bs-parent="#accordionFlushExample">
          <div class="accordion-body">
            <ul class="list-unstyled">
              <li>
                <label>
                  <input type="checkbox" name="availability[]" value="Monday"> Monday
                </label>
              </li>
              <li>
                <label>
                  <input type="checkbox" name="availability[]" value="Tuesday"> Tuesday
                </label>
              </li>
              <li>
                <label>
                  <input type="checkbox" name="availability[]" value="Wednesday"> Wednesday
                </label>
              </li>
              <li>
                <label>
                  <input type="checkbox" name="availability[]" value="Thursday"> Thursday
                </label>
              </li>
              <li>
                <label>
                  <input type="checkbox" name="availability[]" value="Friday"> Friday
                </label>
              </li>
            </ul>
          </div>
        </div>
      </div>
      <!-- Tags -->
      <div class="accordion-item mb-3">
        <h2 class="accordion-header" id="headingTags">
          <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapseFour" aria-expanded="false" aria-controls="flush-collapseFour">
            Tags
          </button>
        </h2>
        <div id="flush-collapseFour" class="accordion-collapse collapse" aria-labelledby="headingTags" data-bs-parent="#accordionFlushExample">
          <div class="accordion-body">
            <ul class="list-unstyled" data-filter-users-target="tags">
              <% @tags.each do |tag| %>
                <li>
                  <label>
                    <input type="checkbox" name="tags[]" value="<%= tag.name %>" data-action='change->filter-users#filterUsers'> <%= tag.name %>
                  </label>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <!-- Reset button -->
      <div class="accordion-item mb-3">
        <h2 class="accordion-header-button">
          <input class="btn-reset" type="reset" value="Reset">
        </h2>
      </div>
    </div>
  </div>
</form>
