<%= simple_form_for(current_user, url: upgrade_to_interviewer_user_path(current_user), method: :patch) do |f| %>
  <%= f.input :years_experience %>
  <%= f.input :headline %>
  <%= f.input :about %>

  <div class="form-group">
    <%= f.label :tag_ids, "Select Tags" %>
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name do |b| %>
      <div class="checkbox">
        <label>
          <%= b.check_box %> <%= b.text %>
        </label>
      </div>
    <% end %>
  </div>
  
  <%= f.button :submit, "Become interviewer" %>
<% end %>
